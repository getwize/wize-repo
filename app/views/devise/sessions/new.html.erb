<h2 class="center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="group">
  <label>
    <span>Email</span>
    <%= f.email_field :email, autofocus: true, class: "field" %>
  </label>
</div>

<div class="group">
  <label>
    <span>Password</span>
    <%= f.password_field :password, autocomplete: "off", class: "field" %>
  </label>
</div>

<div class="form-group">
  <%= f.submit "Log in", class: "stripe-button" %>
</div>

<% if devise_mapping.rememberable? -%>
<div class="form-group">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
</div>
<% end -%>
<%= render "devise/shared/links" %>
<% end %>

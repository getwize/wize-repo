<h2 class="center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="group">
  <label>
    <span>Gym Name</span>
    <%= f.text_field :business_name, autofocus: true, class: "field" %>
  </label>
</div>

<div class="group">
  <label>
    <span>Email</span>
    <%= f.email_field :email, class: "field" %>
  </label>
</div>

<div class="group">
  <label>
    <span>Password</span>
    <%= f.password_field :password, autocomplete: "off", class: "field" %>
  </label>
</div>

<div class="group">
  <label>
    <span>Confirm</span>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "field" %>
  </label>
</div>

<div class="form-group">
  <%= f.submit "Sign up", class: "stripe-button-green" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
